---
import { getCategoriesWithPosts } from "../utils/sanity";

const categories = await getCategoriesWithPosts();
const currentPath = Astro.url.pathname;
---

<nav class="category-nav">
  <ul>
    <li>
      <a href="/" class={currentPath === "/" ? "active" : ""}>All</a>
    </li>
    {categories.map((category) => (
      <li>
        <a 
          href={`/category/${category.slug.current}`}
          class={currentPath.includes(`/category/${category.slug.current}`) ? "active" : ""}
        >
          {category.title}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .category-nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-family: var(--font-family-sans);
    font-size: 1.25rem; /* 20px - increased as requested */
    line-height: 1.7; 
  }

  .category-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .category-nav li {
    margin-bottom: 0.5rem;
  }

  .category-nav a {
    color: var(--black);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
    display: block; /* Ensure line-height applies */
    line-height: 2rem; /* Explicitly setting line-height to be generous per request */
  }

  .category-nav a:hover,
  .category-nav a.active {
    color: #eb5027;
    font-weight: 500;
  }
</style>
