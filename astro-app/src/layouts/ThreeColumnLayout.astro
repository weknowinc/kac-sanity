---
import { ViewTransitions } from 'astro:transitions';
import CategoryNav from '../components/CategoryNav.astro';
import ContactModal from '../components/ContactModal';

interface Props {
  title: string;
  description?: string;
  image?: string;
  isArticleView?: boolean;
}

const { 
  title, 
  description = "Kenny's personal blog about technology, investing, tennis and everything in between.", 
  image = "/opengraph.png",
  isArticleView = false 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet" />

    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-11547VPW52"></script>
    <script is:inline>
      // @ts-nocheck
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-11547VPW52');
    </script>
    <ViewTransitions />
  </head>
  <body>
    <div class="mobile-header">
        <a href="/" class="mobile-logo">KAC</a>
        <button class="mobile-menu-btn" aria-label="Menu">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
    </div>

    <div class="mobile-menu">
        <div class="mobile-menu-content">
            <p class="nav-title">CATEGORIES</p>
            <CategoryNav />
        </div>
    </div>

    <div class="mobile-tabs">
        <button class="mobile-tab-btn active" data-target="main">BLOG POSTS</button>
        <button class="mobile-tab-btn" data-target="thoughts">THOUGHTS</button>
    </div>

    <div class="layout-grid">
      <!-- Column 1: Sidebar (span 2) -->
      <aside class="sidebar">
        <header class="header">
            <a class="header__title" href="/">Kenny<br> Abarca<br> Coto</a>
        </header>
        <div class="nav-container">
            <p class="nav-title">CATEGORIES</p>
            <CategoryNav />
        </div>
      </aside>

      <!-- Column 2: Main Feed (span 6 or 10) -->
      <main class:list={["main-content", { "article-view": isArticleView }]}>
        <slot name="main" />
      </main>

      <!-- Column 3: Thoughts (span 4) -->
      <aside class="thoughts-sidebar hidden-mobile">
          <h2 class="thoughts-title">THOUGHTS</h2>
          <slot name="thoughts" />
      </aside>
    </div>
    <ContactModal client:idle />

    <script>
        const mobileHeader = document.querySelector('.mobile-header') as HTMLElement;
        const mobileMenu = document.querySelector('.mobile-menu') as HTMLElement;
        const menuBtn = document.querySelector('.mobile-menu-btn') as HTMLElement;
        const mobileTabs = document.querySelector('.mobile-tabs') as HTMLElement;
        const tabBtns = document.querySelectorAll('.mobile-tab-btn');
        const mainContent = document.querySelector('.main-content');
        const thoughtsSidebar = document.querySelector('.thoughts-sidebar');
        
        // Tab Switching Logic
        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const target = btn.getAttribute('data-target');
                
                // Update tabs state
                tabBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Toggle content visibility
                if (target === 'main') {
                    mainContent?.classList.remove('hidden-mobile');
                    thoughtsSidebar?.classList.add('hidden-mobile');
                } else {
                    mainContent?.classList.add('hidden-mobile');
                    thoughtsSidebar?.classList.remove('hidden-mobile');
                }
                
                // Scroll to top when switching
                window.scrollTo(0, 0);
            });
        });

        let lastScrollY = window.scrollY;

        // Smart Header Scroll
        window.addEventListener('scroll', () => {
            if (!mobileHeader) return;
            const currentScrollY = window.scrollY;

            // Hide on scroll down, show on scroll up
            if (currentScrollY > lastScrollY && currentScrollY > 50) {
                mobileHeader.classList.add('hidden');
                // When header hides, move tabs up to stick to top
                if (mobileTabs) {
                    mobileTabs.style.transform = 'translateY(-60px)';
                }
            } else {
                mobileHeader.classList.remove('hidden');
                // When header shows, reset tabs position
                if (mobileTabs) {
                    mobileTabs.style.transform = 'translateY(0)';
                }
            }
            lastScrollY = currentScrollY;
        });

        // Menu Toggle
        menuBtn?.addEventListener('click', () => {
            mobileMenu?.classList.toggle('open');
            menuBtn.classList.toggle('active');
            
            // Toggle icon between hamburger and X
            const svg = menuBtn.querySelector('svg');
            if (svg) {
                if (mobileMenu?.classList.contains('open')) {
                    svg.innerHTML = '<line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>';
                    document.body.style.overflow = 'hidden';
                } else {
                    svg.innerHTML = '<line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line>';
                    document.body.style.overflow = '';
                }
            }
        });
    </script>
  </body>
</html>

<style>
  /* Global Variables */
  :root {
    --white: #fff;
    --black: #101112;
    --gray-200: #eff3f4;
    --gray-600: #6e7683;
    --blue-600: #eb5027;
    
    --font-family-sans: Inter, sans-serif;
    --font-family-serif: 'PT Serif', serif;
  }

  html {
    background-color: #ffffff;
    min-height: 100vh;
    font-family: var(--font-family-sans);
    color: var(--black);
  }

  body {
    margin: 0;
    max-width: 1300px; /* Matching X.com approx width */
    margin: 0 auto;
    background-color: #FFF;
  }

  .layout-grid {
    display: grid;
    /* X.com style: Fixed Left (~275px), Fluid Middle, Fixed Right (~350px) */
    grid-template-columns: 275px 1fr 350px;
    gap: 0; /* Remove gap for border lines to touch */
    min-height: 100vh;
    background-color: #FFF;
    box-shadow: 0 0 60px rgba(1,0,0,0.08);
  }

  /* Sidebar Styles */
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding-right: 2rem; /* Add spacing inside column */
    padding-top: 1rem;
    padding-left: 2rem;
    
    /* Make sticky */
    position: sticky;
    top: 0;
    align-self: start;
    height: 100vh;
    overflow-y: auto;
  }

  /* ... sidebar titles etc ... */
  .sidebar .header__title {
    font-family: var(--font-family-sans);
    font-weight: 800;
    font-size: 1.3rem;
    line-height: 1;
    text-decoration: none;
    color: #eb5027;
    display: inline-block; /* Ensure background respects box */
    text-transform: uppercase;
  }

  .nav-title {
    font-size: 0.8125rem;
    font-weight: 400;
    color: #ff8565;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Main Content Styles */
  .main-content {
    border-left: 1px solid var(--gray-200);
    border-right: 1px solid var(--gray-200);
    /* Padding is handled inside the slot containers mostly, but we can standardise */
  }

  .main-content.article-view {
    grid-column: 2 / -1;
    border-right: none; /* No border on right if full width */
  }

  /* Desktop-only rule to hide thoughts in article view */
  @media (min-width: 1025px) {
    .main-content.article-view + .thoughts-sidebar {
        display: none;
    }
  }

  /* Thoughts Sidebar Styles */
  .thoughts-sidebar {
    padding-left: 0; /* Clear previous padding */
    border-left: none; /* Already handled by main-content right border */
    border-right: 1px solid var(--gray-200); /* Vertical line to the right of 3rd column */
  }

  .thoughts-title {
    font-size: 0.875rem;
    font-weight: 700;
    color: #ff8565;
    margin-top: 0;
    margin-bottom: 2rem; /* Changed from 1.5rem + 1rem combo to match main col */
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 1rem 1.5rem; /* Match header container padding */
    border-bottom: 1px solid var(--gray-200); /* Line under title */
    
    /* Ensure height matches main col header */
    height: 57px; /* Explicit height calculation: 14px font * 1.25 line height + 2rem padding + 1px border ~ 17.5 + 32 + 1 = 50.5. Let's just use box-sizing to ensure match.*/
    box-sizing: border-box;
    display: flex;
    align-items: center;

    /* Make sticky */
    position: sticky;
    top: 0;
    background-color: #FFF;
    z-index: 10;
  }

  /* Mobile Header Styles */
  .mobile-header {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--gray-200);
      z-index: 100;
      padding: 0 1.5rem;
      align-items: center;
      justify-content: space-between;
      transition: transform 0.3s ease;
  }

  .mobile-header.hidden {
      transform: translateY(-100%);
  }
  
  /* Mobile Tabs Styles */
  .mobile-tabs {
      display: none;
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      height: 50px;
      background: #FFF;
      border-bottom: 1px solid var(--gray-200);
      z-index: 99;
      transition: transform 0.3s ease;
  }
  
  .mobile-tab-btn {
      flex: 1;
      border: none;
      background: none;
      font-family: var(--font-family-sans);
      font-weight: 700;
      font-size: 0.875rem;
      color: #ff8565;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border-bottom: 2px solid transparent;
      transition: all 0.2s;
  }
  
  .mobile-tab-btn.active {
      color: #eb5027;
      border-bottom-color: #eb5027;
      background-color: rgba(235, 80, 39, 0.05);
  }

  .mobile-logo {
      font-weight: 800;
      font-size: 1.5rem;
      color: #eb5027;
      text-decoration: none;
      letter-spacing: -0.02em;
  }

  .mobile-menu-btn {
      background: none;
      border: none;
      cursor: pointer;
      color: #eb5027;
      padding: 0;
  }

  /* Mobile Menu Overlay */
  .mobile-menu {
      position: fixed;
      top: 60px; /* Below header */
      left: 0;
      right: 0;
      bottom: 0;
      background: white;
      z-index: 101; /* Ensure above tabs */
      transform: translateX(100%);
      transition: transform 0.3s ease;
      padding: 2rem;
  }

  .mobile-menu.open {
      transform: translateX(0);
  }

  /* Mobile Responsiveness */
  @media (max-width: 1024px) {
    .layout-grid {
      display: flex;
      flex-direction: column;
      padding-top: 135px; /* 60px header + 50px tabs + 25px extra spacing */
    }

    .mobile-header, .mobile-tabs {
        display: flex;
    }
    
    .hidden-mobile {
        display: none !important;
    }

    .sidebar {
        display: none; /* Hide default sidebar on mobile */
    }

    .main-content, .thoughts-sidebar {
      grid-column: auto;
      width: 100%;
      border: none;
      padding: 0;
    }
  }
</style>
